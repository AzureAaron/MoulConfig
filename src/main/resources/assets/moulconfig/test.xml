<?xml version="1.0" encoding="UTF-8" ?>
<Gui xmlns="http://notenoughupdates.org/moulconfig">
    <Column>
        <Row>
            <Text text="Option A" width="80"/>
            <Switch
                    value="@value"
                    animationSpeed="100"
            />
        </Row>
        <Row>
            <Text text="Option B" width="80"/>
            <Switch
                    value="@value"
                    animationSpeed="1000"
            />
        </Row>
        <Array data="@data">
            <Row>
                <Text text="@text" width="80"/>
                <Switch value="@enabled"/>
                <Button onClick="@randomize">
                    <Text text="Randomize"/>
                </Button>
            </Row>
        </Array>
    </Column>
</Gui>